<Page x:Class="StudentInfoSystem.SpecializationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StudentInfoSystem"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Specializations">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="specializations" Grid.Row="0">
            <ListBox Name="specializationsList"></ListBox>
        </GroupBox>
        <Grid Grid.Row="1">
            <TextBox x:Name="specializationBox" HorizontalAlignment="Left" Height="23"
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="217" />
        </Grid>
    </Grid>
</Page>
